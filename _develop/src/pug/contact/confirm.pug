extends ../utils/_base.pug

block append stylesheet
  //- assetPathで自動でサブディレクトリ対応の/assets/のパスが出るようにしてあります。
  link(rel="stylesheet", href=assetPath + 'css/form.css')
  link(rel="stylesheet", href=assetPath + 'css/contact.css')

block subTitle
  - var pageTitle = 'お問い合わせ';

block main
